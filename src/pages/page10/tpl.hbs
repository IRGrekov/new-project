<section class="chat">
	<div id="add_user_form" class="form">
		<div class="form__update">
			{{> title style='form__title' text_title='Добавить пользователя'}}
			<form>
				{{> inputform id = 'login' label='Логин' }}
				{{> button id="remove_user_form" style_btn='someBtn' value='Добавить' }}
			</form>
		</div>
	</div>
	<div id="dell_user_form" class="form">
		<div class="form__update">
			{{> title style='form__title' text_title='Удалить пользователя'}}
			<form>

				{{> inputform id = 'login1' label='Логин' }}
				{{> button id="remove_user_form_update" style_btn='someBtn' value='Удалить' }}
			</form>
		</div>
	</div>
	<div class="chat__item">
		{{> button_to-profile href="#page3"}}
		{{> button_search }}

		<ul class="chat__list">
			{{> chat_element
			name = 'Андрей'
			text = 'Изображение'
			time = '10:49'
			notification = '2'
			}}
			{{> chat_element
			name = 'Киноклуб'
			text = 'Вы: стикер'
			time = '12:00'
			}}
			{{> chat_element
			name = 'Илья'
			text = 'Друзья, у меня для вас особенный выпуск новостей!...'
			time = '15:12'
			notification = '4'
			}}
			{{> chat_element
			name = 'Вадим'
			text = 'Вы: Круто!'
			time = 'пт'
			}}
			{{> chat_element
			name = 'тет-а-теты'
			text = 'И Human Interface Guidelines и Material Design рекомендуют...'
			time = 'ср'
			}}
			{{> chat_element
			name = '1, 2, 3'
			text = 'Миллионы россиян ежедневно проводят десятки часов свое...'
			time = 'пн'
			}}
			{{> chat_element
			name = 'Design Destroyer'
			text = 'В 2008 году художник Jon Rafman  начал собирать...'
			time = 'пн'
			}}
			{{> chat_element
			name = 'Day.'
			text = 'Так увлёкся работой по курсу, что совсем забыл его анонсир...'
			time = '1 Мая'
			}}
			{{> chat_element
			name = 'Стас Рогозин'
			text = 'Можно или сегодня или завтра вечером.'
			time = '12 Апр'
			}}
		</ul>
	</div>
	<div class="chat__item">
		{{> chat_profile name='Влад' }}
		<div class="correspondence">
			{{> title style='correspondence__date' text_title='19 июня'}}
			<div class="correspondence__content">
				{{> chat_text text_time='11:56' text='Привет! Смотри, тут всплыл интересный кусок лунной космической истории —
				НАСА
				в какой-то момент попросила Хассельблад адаптировать модель SWC для полетов на Луну. Сейчас мы все знаем что
				астронавты летали с моделью 500 EL — и к слову говоря, все тушки этих камер все еще находятся на поверхности
				Луны, так как астронавты с собой забрали только кассеты с пленкой.

				Хассельблад в итоге адаптировал SWC для космоса, но что-то пошло не так и на ракету они так никогда и не
				попали. Всего их было произведено 25 штук, одну из них недавно продали на аукционе за 45000 евро.' }}

			</div>
			<div class="correspondence__content">
				<img src="/src/aseets/foto_chat.png" alt="">
			</div>
			<div class="correspondence__content">
				<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
					x="0px" y="0px" viewBox="0 0 864 864" style="enable-background:new 0 0 864 864;" xml:space="preserve">
					<path d="M652.5,304.3c-1.6-53.7-79.6-53.7-81.2,0h-98.6v-98.6c53.7-1.6,53.7-79.6,0-81.2c-1.6-53.7-79.6-53.7-81.2,0
	c-53.7,1.6-53.7,79.6,0,81.2v98.6h-98.6c-1.6-53.7-79.6-53.7-81.2,0c-53.7,1.6-53.7,79.6,0,81.2c1.6,53.7,79.6,53.7,81.2,0h98.6
	v272.7c-53.7,1.6-53.7,79.6,0,81.2c1.6,53.7,79.6,53.7,81.2,0c53.7-1.6,53.7-79.6,0-81.2V385.6h98.6c1.6,53.7,79.6,53.7,81.2,0
	C706.2,383.9,706.2,306,652.5,304.3z M657.2,362.4h-27.9v27.9h-34.8v-27.9H449.4v319.2h27.9v34.8h-27.9v27.9h-34.8v-27.9h-27.9
